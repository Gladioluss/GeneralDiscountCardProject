<Login@Screen>:
    name: 'login_screen'

    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: login_label
            text: "Войти"
            font_size: 40
            font_name: 'productsans.ttf'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: username
            hint_text: 'username'
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            font_name: 'productsans.ttf'
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: password
            hint_text: 'password'
            icon_right: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: sp(18)
            font_name: 'productsans.ttf'
            pos_hint: {'center_x': 0.5}
            password: True

        MDRoundFlatButton:
            text: "Войти"
            font_size: 12
            font_name: 'productsans.ttf'
            pos_hint: {"center_x": 0.5}
            on_press: app.login_in_account(username.text, password.text)

        MDRoundFlatButton:
            text: "Назад"
            font_size: 12
            font_name: 'productsans.ttf'
            pos_hint: {"center_x": 0.5}
            on_press: app.change_screen('authorization_or_registration_screen')

        Widget:
            size_hint_y: None
            height: 80
