#:import get_color_from_hex kivy.utils.get_color_from_hex

<Home_screen>:
    name: 'home_screen'
    box: box

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            elevation: 10
            title: "Test MDBottomNavigation"
            md_bg_color: get_color_from_hex('#2B221C')


        MDBottomNavigation:
            id: bottomNavigationItem
            panel_color: get_color_from_hex('#2B221C')
            text_color_normal: get_color_from_hex('#9E8C58')
            text_color_active: get_color_from_hex('#F1CC5D')

            MDBottomNavigationItem:
                name: 'screen 1'
                text: "Кошелёк"
                icon: 'wallet-outline'
                MDCard:
                    orientation: "vertical"
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'kv_proj/src/resources/background.png'

                    ScrollView:
                        id: scroll_view

                        MDGridLayout:
                            id: box
                            cols: 2
                            size_hint_y: None
                            padding: 20
                            spacing: 15
                            adaptive_height: True

            MDBottomNavigationItem:
                name: 'screen 2'
                text: "Добавить"
                icon: 'plus-circle-outline'
                on_tab_press:
                    root.add()

            MDBottomNavigationItem:
                name: 'screen 3'
                text: "Меню"
                icon: 'menu'