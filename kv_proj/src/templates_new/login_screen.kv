<Login_screen>:
    name: 'login_screen'

    MDCard:
        size_hint: None, None
        size: app.get_width(), 500
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'kv_proj/src/resources/background.png'

        MDLabel:
            id: login_label
            text: ""
            font_size: 40
            font_name: 'productsans.ttf'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: username
            mode: "line"
            line_color_normal: 230/255, 217/255, 207/255, 0.7
            hint_text: 'Login'
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            font_name: 'productsans.ttf'
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: password
            mode: "line"
            line_color_normal: 230/255, 217/255, 207/255, 0.7
            hint_text: 'Password'
            icon_right: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: sp(18)
            font_name: 'productsans.ttf'
            pos_hint: {'center_x': 0.5}
            password: True

        MDFillRoundFlatButton:
            text: "[color=#000000]Войти[/color]"
            font_size: 18
            font_name: 'productsans.ttf'
            pos_hint: {"center_x": 0.5}
            md_bg_color: 241/255, 204/255, 93/255, 255/255
            on_press: app.login_account(username.text, password.text)

        MDFillRoundFlatButton:
            text: "[color=#000000]Назад[/color]"
            font_size: 18
            font_name: 'productsans.ttf'
            pos_hint: {"center_x": 0.5}
            md_bg_color: 241/255, 204/255, 93/255, 255/255
            on_press: app.change_screen('authorization_or_registration_screen')

        Widget:
            size_hint_y: None
            height: 80