

<Authorization_or_registration_screen>:
    name: "authorization_or_registration_screen"
    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'kv_proj/src/resources/background.png'


        MDFillRoundFlatButton:
            id: button_authorization
            text: "[color=#000000]Авторизация[/color]"
            pos_hint: {"center_x": 0.5}
            font_size: 30
            font_name: 'productsans.ttf'
            md_bg_color: 241/255, 204/255, 93/255, 255/255
            on_press: app.change_screen('login_screen')

        MDFillRoundFlatButton:
            text: "[color=#000000]Регистрация[/color]"
            pos_hint: {"center_x": 0.5}
            font_size: 30
            font_name: 'productsans.ttf'
            md_bg_color: 241/255, 204/255, 93/255, 255/255
            on_press: app.change_screen('registration_screen')

        Widget:
            size_hint_y: None
            height: 150
